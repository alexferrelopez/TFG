<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name -->
        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Address -->
        <TextView
            android:id="@+id/station_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_town"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- Type of site badge -->
        <TextView
            android:id="@+id/type_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginTop="8dp"
            android:text="@string/in_building"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:backgroundTint="@color/blue_500"
            android:background="@drawable/bg_badge" />

        <!-- Operator -->
        <TextView
            android:id="@+id/station_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/operator"
            android:textStyle="bold" />

        <!-- Set as destination -->
        <Button
            android:id="@+id/set_destination_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/location"
            android:text="@string/set_as_destination"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/blue_600"
            android:textColor="@android:color/white"/>

        <!-- Hours -->
        <TextView
            android:id="@+id/station_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hours_24_7"
            android:textSize="14sp"/>

        <!-- Accessibility -->
        <LinearLayout
            android:id="@+id/accessibility_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accessibility"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/accessibility_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/accessible" />
        </LinearLayout>

        <!-- Payment Methods -->
        <LinearLayout
            android:id="@+id/payment_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_methods"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/payment_methods_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:divider="?android:dividerHorizontal"
                android:showDividers="middle" />
        </LinearLayout>

        <!-- Refill points -->
        <LinearLayout
            android:id="@+id/refill_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/refill_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_refill_points"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/refill_points_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
